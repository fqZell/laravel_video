{
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php",
            "config": {
                "outputDirectory": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],
    "functions": {
        "api/**/*": {
            "runtime": {
                "name": "php",
                "version": "8.0"
            }
        }
    }
}
